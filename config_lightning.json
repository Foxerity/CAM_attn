{
    "dataset_path": "B:\\datasets\\test",
    "target_condition": "depth",
    "source_conditions": ["canny", "sketch", "color"],
    "img_size": 256,
    "batch_size": 16,
    "num_workers": 4,
    "epochs": 100,
    "lr": 2e-4,
    "lr_step": 20,
    "beta": 0.01,
    "seed": 42,
    "device": "cuda",
    "output_dir": "./output_lightning",
    "save_interval": 10,
    "sample_interval": 5,
    "contrastive_weight": 0.1,
    "feature_matching_weight": 0.1,
    "temperature": 0.5,
    "feature_matching_loss_type": "l1",
    "recon_loss_type": "l1",
    "input_channels": 3,
    "output_channels": 3,
    "base_channels": 64,
    "depth": 4,
    "attention_type": "cbam",
    
    "_comment": "以下是多GPU训练特定的配置",
    "accumulate_grad_batches": 1,
    "gradient_clip_val": 1.0,
    "precision": 16,
    "strategy": "ddp",
    "sync_batchnorm": true,
    "find_unused_parameters": false
}