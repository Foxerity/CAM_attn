{
    "dataset_path": "B:/datasets/test",
    "target_condition": "depth",
    "source_conditions": ["canny", "sketch"],
    "img_size": 128,
    "batch_size": 16,
    "num_workers": 4,
    "epochs": 200,
    "lr": 1e-3,
    "lr_step": 20,
    "beta": 0.01,
    "seed": 42,
    "device": "cuda",
    "output_dir": "./output_enhanced",
    "save_interval": 20,
    
    "input_channels": 3,
    "output_channels": 3,
    "base_channels": 32,
    "depth": 4,
    "attention_type": "cbam",
    "reduction_ratio": 8,
    "kernel_size": 5,
    
    "contrastive_weight": 0.05,
    "feature_matching_weight": 0.5,
    "perceptual_weight": 0.1,
    "temperature": 0.07,
    "feature_matching_loss_type": "l1",
    "use_enhanced_model": true,
    "use_perceptual": true,
    "warmup_steps": 1000
}